{
  "name": "liturgy-day",
  "displayName": "Liturgy.day",
  "version": "1.0.1",
  "description": "A REST API for Liturgical queries",
  "author": {
    "name": "Andrew Ensley",
    "email": "aensley@users.noreply.github.com",
    "url": "https://andrewensley.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aensley/liturgy-day"
  },
  "bugs": {
    "url": "https://github.com/aensley/liturgy-day/issues/new?template=bug-report.yml&title=%5BBug%5D%3A+"
  },
  "funding": [
    "https://github.com/sponsors/aensley",
    "https://paypal.me/AndrewEnsley"
  ],
  "keywords": [
    "api",
    "rest",
    "liturgy",
    "calendar",
    "catholic",
    "christian"
  ],
  "icon": "src/icon.svg",
  "files": [
    "src/ts/**/*",
    "src/openapi.yml",
    "src/*.svg"
  ],
  "main": "src/ts/season.ts",
  "scripts": {
    "precommit-msg": "echo Running pre-commit checks...",
    "format": "prettier --write .",
    "test": "ts-standard && prettier --check . && jest --group=unit --coverage --verbose",
    "integration-test": "jest --group=integration --verbose"
  },
  "pre-commit": [
    "precommit-msg",
    "test"
  ],
  "engines": {
    "node": ">=16"
  },
  "platform": "node",
  "type": "module",
  "devDependencies": {
    "@cfworker/sentry": "^1.12.1",
    "@cloudflare/workers-types": "^3.4.0",
    "@semantic-release/git": "^10.0.1",
    "@sentry/browser": "^7.12.1",
    "@sentry/tracing": "^7.12.1",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.14",
    "axios": "^0.27.2",
    "jest": "^29.0.3",
    "jest-openapi": "^0.14.2",
    "jest-runner-groups": "^2.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.0",
    "ts-standard": "^11.0.0",
    "typescript": "^4.8.3"
  },
  "release": {
    "branches": [
      "main",
      "add-automatic-releases"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "src/openapi.yml"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  },
  "eslintConfig": {
    "extends": "standard-with-typescript",
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "ts-standard": {
    "globals": [],
    "ignore": [
      "/tests/**/*.ts"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120,
    "useTabs": false,
    "endOfLine": "lf",
    "trailingComma": "none",
    "semi": false,
    "singleQuote": true,
    "arrowParens": "always",
    "bracketSameLine": true,
    "bracketSpacing": true,
    "embeddedLanguageFormatting": "auto",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxSingleQuote": false,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "vueIndentScriptAndStyle": false
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "runner": "groups",
    "coverageThreshold": {
      "global": {
        "lines": 80
      }
    }
  }
}
