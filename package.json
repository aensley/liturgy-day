{
  "name": "@aensley/liturgy-day",
  "displayName": "Liturgy.day",
  "version": "1.0.0",
  "description": "A REST API for Liturgical queries",
  "repository": {
    "type": "git",
    "url": "https://github.com/aensley/liturgy-day.git"
  },
  "keywords": [
    "api",
    "rest",
    "liturgy",
    "calendar",
    "catholic",
    "christian"
  ],
  "author": {
    "name": "Andrew Ensley",
    "email": "aensley@users.noreply.github.com",
    "url": "https://andrewensley.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aensley/liturgy-day/issues/new?assignees=aensley&labels=bug%2Ctriage&template=bug-report.yml&title=%5BBug%5D%3A+"
  },
  "funding": [
    "https://github.com/sponsors/aensley",
    "https://paypal.me/AndrewEnsley"
  ],
  "homepage": "https://liturgy.day",
  "files": [
    "src/ts/**/*",
    "src/openapi.yml",
    "src/*.svg"
  ],
  "scripts": {
    "precommit-msg": "echo Running pre-commit checks...",
    "format": "prettier --write .",
    "test": "ts-standard && prettier --check . && jest --group=unit --coverage --verbose",
    "integration-test": "jest --group=integration --verbose",
    "setup": "npm ci && npm run prepare-hook",
    "update": "npx npm-check-updates -u && npm update",
    "generate": "rimraf ./client/ && npx @openapitools/openapi-generator-cli generate -i src/openapi.yml -o ./client/ -g",
    "prepare-hook": "echo 'exec < /dev/tty && node_modules/.bin/cz --hook || true' > .git/hooks/prepare-commit-msg && chmod +x .git/hooks/prepare-commit-msg"
  },
  "pre-commit": [
    "precommit-msg",
    "test"
  ],
  "engines": {
    "node": ">=16"
  },
  "platform": "node",
  "type": "module",
  "devDependencies": {
    "@aensley/semantic-release-openapi": "^1.1.6",
    "@cfworker/sentry": "^1.12.4",
    "@cloudflare/workers-types": "^3.18.0",
    "@semantic-release/git": "^10.0.1",
    "@sentry/browser": "^7.17.0",
    "@sentry/tracing": "^7.17.2",
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.7",
    "axios": "^1.1.3",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "jest": "^29.2.2",
    "jest-openapi": "^0.14.2",
    "jest-runner-groups": "^2.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-standard": "^12.0.1",
    "typescript": "^4.8.4"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "src/openapi.yml",
              "label": "Open API Spec"
            }
          ]
        }
      ],
      "@semantic-release/npm",
      [
        "@aensley/semantic-release-openapi",
        {
          "apiSpecFiles": [
            "src/openapi.yml"
          ]
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "src/openapi.yml"
          ]
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "standard-with-typescript",
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "ts-standard": {
    "globals": [],
    "ignore": [
      "/tests/**/*.ts"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120,
    "useTabs": false,
    "endOfLine": "lf",
    "trailingComma": "none",
    "semi": false,
    "singleQuote": true,
    "arrowParens": "always",
    "bracketSameLine": true,
    "bracketSpacing": true,
    "embeddedLanguageFormatting": "auto",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxSingleQuote": false,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "vueIndentScriptAndStyle": false
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "runner": "groups",
    "coverageThreshold": {
      "global": {
        "lines": 80
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
